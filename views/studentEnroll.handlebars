<div class="container">
  <form>
    <hr />
    <div>
      <label>First Name</label>
      <input name="firstName" type="text" />

      <label>Last Name</label>
      <input name="lastName" type="text" />

      <label>Phone Number</label>
      <input name="phoneNumber" type="number" />
    </div>
    <div>
      <label>Email Address</label>
      <input name="email" type="email" />

      <label>Riding Frequency</label>
      <input name="frequency" type="text" />
    </div>
    <br />
    <div class="form-group">
      <label>Participated in formal competition? </label>
      <input name="competition" type="checkbox" />
    </div>
    <div class="form-group">
      <label>Interested in Lessons?</label>
      <input name="lessons" type="checkbox" />
    </div>
    <div class="form-group">
      <label>Showing?</label>
      <input name="showing" type="checkbox" />
    </div>
    <div class="form-group">
      <label>Jumping?</label>
      <input name="jumping" type="checkbox" />
    </div>
    <div class="form-group">
      <label>Trailriding?</label>
      <input name="trailRide" type="checkbox" />
    </div>
    <div class="form-group">
      <label>School Equestrian Program?</label>
      <input name="schoolProgram" type="checkbox" />
    </div>

    <button type="submit" class="btn btn-primary">Register</button>
  </form>
</div>